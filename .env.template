# Supabase Configuration
SUPABASE_URL=https://your-project-ref.supabase.co
SUPABASE_ANON_KEY=your-anon-key-here

# Admin Key (Full Access - Bypasses RLS)
# Use ONLY for migrations and admin operations
SUPABASE_ADMIN_KEY=your-admin-service-role-key-here

# Agent-Specific Service Keys (Phase 2 - Privilege Control)
# Create these in Supabase Dashboard → Settings → API → Service Role Keys

# Scraper Agent (Limited Write Access)
# Permissions: Read auctions (30d), Write auctions/activities/errors
SUPABASE_SCRAPER_KEY=your-scraper-service-key-here

# Analysis Agent (Read Processed Data)
# Permissions: Read processed auctions, Write insights/metrics
SUPABASE_ANALYSIS_KEY=your-analysis-service-key-here

# Report Agent (Read-Only)
# Permissions: Read ALL tables (completed/processed only), NO write access
SUPABASE_REPORT_KEY=your-report-service-key-here

# QA Agent (Quality Analysis)
# Permissions: Read ALL tables, Write metrics/errors/alerts
SUPABASE_QA_KEY=your-qa-service-key-here

# Legacy Service Role Key (Backward Compatibility)
# This key will be used if agent-specific keys are not set
# DEPRECATED - Migrate to agent-specific keys
SUPABASE_SERVICE_ROLE_KEY=your-legacy-service-role-key-here

# Database Direct Connection (For SQL Deployments)
# Format: postgresql://postgres:[PASSWORD]@db.[PROJECT-REF].supabase.co:5432/postgres
DATABASE_URL=postgresql://postgres:YOUR_DB_PASSWORD@db.your-project-ref.supabase.co:5432/postgres
SUPABASE_DB_PASSWORD=your-database-password-here

# LLM API Keys (If Applicable)
ANTHROPIC_API_KEY=your-anthropic-api-key-here
OPENAI_API_KEY=your-openai-api-key-here

# Slack Notifications (Optional)
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL

# Security Configuration
SECURITY_LOG_LEVEL=INFO
ANOMALY_DETECTION_ENABLED=true
CIRCUIT_BREAKER_ENABLED=true
RLS_ENFORCEMENT=true

# Health Check Configuration
HEALTH_CHECK_PORT=8000
HEALTH_CHECK_ENABLED=true

# Monitoring (Optional)
PROMETHEUS_ENABLED=false
GRAFANA_ENABLED=false
