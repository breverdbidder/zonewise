# ZoneWise AI Chatbot Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# APPLICATION
# =============================================================================
APP_NAME="ZoneWise AI Chatbot"
APP_VERSION="1.0.0"
ENVIRONMENT="development"  # development, staging, production
DEBUG=true

# Server
HOST="0.0.0.0"
PORT=8000

# =============================================================================
# SUPABASE
# =============================================================================
SUPABASE_URL=https://your-project-id.supabase.co
SUPABASE_ANON_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...
SUPABASE_SERVICE_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...  # PRIVATE - backend only

# =============================================================================
# AI/ML APIS
# =============================================================================

# Gemini (Primary NLP)
GEMINI_API_KEY=your_gemini_api_key_here  # Get from ai.google.dev

# Claude (Backup)
ANTHROPIC_API_KEY=sk-ant-your_key_here  # Get from console.anthropic.com

# OpenAI (Embeddings)
OPENAI_API_KEY=sk-your_openai_key_here  # Get from platform.openai.com

# =============================================================================
# MODEL CONFIGURATION
# =============================================================================
PRIMARY_MODEL="gemini-2.0-flash-exp"  # Gemini 2.5 Flash
BACKUP_MODEL="claude-sonnet-4-20250514"  # Claude Sonnet 4.5
EMBEDDING_MODEL="text-embedding-3-small"

# =============================================================================
# CHATBOT PARAMETERS
# =============================================================================
MAX_CONVERSATION_HISTORY=10
INTENT_CONFIDENCE_THRESHOLD=0.7
ENTITY_CONFIDENCE_THRESHOLD=0.6
RAG_SIMILARITY_THRESHOLD=0.7
RAG_MAX_RESULTS=5

# Response Generation
RESPONSE_TEMPERATURE=0.3
RESPONSE_MAX_TOKENS=1000
RESPONSE_TIMEOUT=30

# =============================================================================
# RATE LIMITING
# =============================================================================
FREE_TIER_CONVERSATIONS_PER_MONTH=5
BASIC_TIER_CONVERSATIONS_PER_MONTH=-1  # -1 = unlimited

# =============================================================================
# CORS (Frontend URLs)
# =============================================================================
CORS_ORIGINS='["http://localhost:3000","http://localhost:5173","https://zonewise.pages.dev"]'

# =============================================================================
# LOGGING & MONITORING
# =============================================================================
LOG_LEVEL="INFO"  # DEBUG, INFO, WARNING, ERROR
SENTRY_DSN=""  # Optional: Sentry error tracking

# =============================================================================
# BREVARD COUNTY
# =============================================================================
DEFAULT_JURISDICTION="Melbourne"
